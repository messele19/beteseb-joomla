<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="manufacturer">
		<fieldset name="manufacturer" label="COM_SELLACIOUS_PROFILE_FIELDSET_MANUFACTURER">
			<field
				name="id"
				type="hidden"
			/>
			<field
				name="title"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_MFR_NAME_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_MFR_NAME_DESC"
				class="inputbox"
			/>
			<field
				name="code"
				type="text"
				label="COM_SELLACIOUS_PROFILE_FIELD_MFR_CODE_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_MFR_CODE_DESC"
				class="inputbox"
			/>
			<field
				name="logo"
				type="fileplus"
				label="COM_SELLACIOUS_PROFILE_FIELD_MFR_LOGO_LABEL"
				description="COM_SELLACIOUS_PROFILE_FIELD_MFR_LOGO_DESC"
				class="inputbox"
				accept=".jpg,.png"
				context="manufacturers.logo"
				filter="unset"
			/>
		</fieldset>
	</fields>
</form>
